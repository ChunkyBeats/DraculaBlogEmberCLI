{{#if isEditing}}
  {{partial 'post/edit'}}
  <button {{action 'doneEditing'}}>Done</button>
{{else}}
  <h1>{{title}}</h1>

  <h2>by {{author.name}}</h2>

  <hr>

  <div class="body">
    {{body}}
  </div>
  <br>
  <button {{action 'edit'}}>Edit</button>
{{/if}}


<button class="btn btn-danger" {{action 'delete'}}>Delete Question</button>

<br><br>
<p>{{#link-to 'new-comment'}}Add a Comment{{/link-to}}</p>

{{outlet}}

<ul>
{{#each comments}}
  <li>{{comment}}</li>
{{/each}}
</ul>
